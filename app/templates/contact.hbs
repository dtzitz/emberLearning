
<div class="row">
    <div class="form-group col-xs-10 col-xs-offset-1 col-md-4">
        {{input type="email" value=contactEmail class="form-control" placeholder="email address"}}
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-10 col-xs-offset-1 col-md-4">
        {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=contactMessage}}
    </div>
</div>

<div class="row">
    <div class="form-group col-xs-10 col-xs-offset-1 col-md-2">
        <button class="btn btn-primary btn-lg btn-block" {{action 'sendMessage'}} disabled={{isDisabled}}>Send Message</button>
    </div>
</div>

{{#if responseMessage}}
<div class="row">
    <div class="form-group col-xs-10 col-xs-offset-1 col-md-4">
        <div class="alert alert-success">{{responseMessage}}</div>
    </div>
</div>
            
{{/if}}

    
